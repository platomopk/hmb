<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/header"></include>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!--Login-->
            <LinearLayout
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Image"
                        android:textStyle="bold"
                        android:textAllCaps="true"
                        android:textAppearance="?android:textAppearanceMedium"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Please select an image for your child's profile. Please note that this image can be used to identify the child."
                        android:textAppearance="?android:textAppearanceSmall"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_marginBottom="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    >
                    <ImageView
                        android:id="@+id/image"
                        android:layout_width="140dp"
                        android:layout_height="140dp"
                        android:src="@drawable/profile_black"
                        android:padding="2dp"
                        android:scaleType="centerCrop"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp"
                    android:weightSum="100"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="50"
                        android:gravity="end|center"
                        >
                        <ImageButton
                            android:id="@+id/selectImg"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:background="@drawable/camera"
                            android:layout_marginRight="15dp"
                            android:focusable="true"
                            android:focusableInTouchMode="true"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="50"
                        android:gravity="start|center"
                        >
                        <ImageButton
                            android:id="@+id/galleryImg"
                            android:layout_marginLeft="15dp"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:background="@drawable/picture"
                            />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Basic Information"
                        android:textStyle="bold"
                        android:textAllCaps="true"
                        android:textAppearance="?android:textAppearanceMedium"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Please fill in the following information. This information can be used to address your child in the future."
                        android:textAppearance="?android:textAppearanceSmall"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Full Name"
                        android:textAppearance="?android:textAppearanceSmall"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/fullname"
                        android:inputType="text"
                        android:imeOptions="actionNext"
                        android:paddingLeft="5dp"
                        android:background="#fff"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:hint="e.g. Khyzar Kapoor"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:textAppearance="?android:textAppearanceSmall"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Gender"
                        android:textAppearance="?android:textAppearanceSmall"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <Spinner
                        android:spinnerMode="dialog"
                        android:id="@+id/gender"
                        android:inputType="text"
                        android:imeOptions="actionNext"
                        android:background="#fff"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:hint="Gender"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:textAppearance="?android:textAppearanceSmall"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Form-B #"
                        android:textAppearance="?android:textAppearanceSmall"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/cnic"
                        android:inputType="text"
                        android:imeOptions="actionNext"
                        android:paddingLeft="5dp"
                        android:background="#fff"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:hint="*****-*******-*"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:textAppearance="?android:textAppearanceSmall"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="School Information"
                        android:textStyle="bold"
                        android:textAllCaps="true"
                        android:textAppearance="?android:textAppearanceMedium"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Please fill in the following information correctly. HMB will alot a van for your child based on this information"
                        android:textAppearance="?android:textAppearanceSmall"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="City"
                        android:textAppearance="?android:textAppearanceSmall"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <Spinner
                        android:spinnerMode="dialog"
                        android:id="@+id/city"
                        android:inputType="text"
                        android:imeOptions="actionNext"
                        android:background="#fff"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:hint="City"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:textAppearance="?android:textAppearanceSmall"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="School Name"
                        android:textAppearance="?android:textAppearanceSmall"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <Spinner
                        android:spinnerMode="dialog"
                        android:id="@+id/schoolname"
                        android:inputType="text"
                        android:imeOptions="actionNext"
                        android:background="#fff"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:hint="City"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:textAppearance="?android:textAppearanceSmall"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Grade"
                        android:textAppearance="?android:textAppearanceSmall"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <Spinner
                        android:spinnerMode="dialog"
                        android:id="@+id/grade"
                        android:inputType="text"
                        android:imeOptions="actionNext"
                        android:background="#fff"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:hint="City"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:textAppearance="?android:textAppearanceSmall"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Section"
                        android:textAppearance="?android:textAppearanceSmall"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <Spinner
                        android:spinnerMode="dialog"
                        android:id="@+id/section"
                        android:inputType="text"
                        android:imeOptions="actionNext"
                        android:background="#fff"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:hint="City"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:textAppearance="?android:textAppearanceSmall"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Roll #"
                        android:textAppearance="?android:textAppearanceSmall"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/rollnumber"
                        android:inputType="text"
                        android:imeOptions="actionNext"
                        android:paddingLeft="5dp"
                        android:background="#fff"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:hint="e.g. 172468"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:textAppearance="?android:textAppearanceSmall"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Acknowledgement"
                        android:textStyle="bold"
                        android:textAllCaps="true"
                        android:textAppearance="?android:textAppearanceMedium"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="By pressing the following button, you agree that the information provided above is correct to the best of your knowledge."
                        android:textAppearance="?android:textAppearanceSmall"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <Button
                        android:id="@+id/register"
                        android:textColor="#fff"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:text="Register Child"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:textAppearance="?android:textAppearanceSmall"
                        android:background="@color/colorPrimary"
                        />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
